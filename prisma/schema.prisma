generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String    @unique
  password    String
  role        String    @default("user")
  dateOfBirth DateTime
  dateCreated DateTime  @default(now())
  dateUpdated DateTime  @updatedAt
  discord     Discord?  @relation(fields: [discordId], references: [id])
  discordId   String?   @unique @db.ObjectId
  league      League?   @relation(fields: [leagueId], references: [id])
  leagueId    String?   @unique @db.ObjectId
  valorant    Valorant? @relation(fields: [valorantId], references: [id])
  valorantId  String?   @unique @db.ObjectId

  @@map("user")
}

model Discord {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  discordId String @unique
  User      User?

  @@map("discord")
}

model League {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  leagueId String @unique
  User     User?

  @@map("league")
}

model Valorant {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  valorantId String @unique
  User       User?

  @@map("valorant")
}
